@model List<UserWithFriendsCountVM>

<div class="box p-5 px-6">
    <div class="flex items-baseline justify-between text-black">
        <h3 class="font-bold text-base"> People You May Know </h3>
    </div>
    <div class="side-list">
        @foreach(var data in Model)
        {
            <div class="side-list-item">
                <a asp-controller="Users" asp-action="Details" asp-route-userId="1">
                    <img src="@(string.IsNullOrEmpty(data.ProfilePictureUrl) ? Url.Content("~/images/avatars/user.png") : data.ProfilePictureUrl)" class="side-list-image rounded-full" />
                </a>
                <div class="flex-1">
                    <a><h4 class="side-list-title">@data.FullName</h4></a>
                    <div>@data.FriendsCountDisplay</div>
                </div>
                <form asp-controller="Friends" asp-action="SendFriendRequest">
                    <input type="hidden" name="receiverId" value="@data.UserId"/>
                    <button type="submit" class="button bg-primary-soft text-primary">Follow</button>
                </form>
            </div>
        }
    </div>
</div>


